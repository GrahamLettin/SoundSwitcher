<Window x:Class="SoundSwitcher.CustomContextMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:usercontrols="clr-namespace:SoundSwitcher.UserControls"
        mc:Ignorable="d"
        WindowStyle="None"
        ShowInTaskbar="False"
        Height="100" Width="100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <usercontrols:SoundControl Grid.Row="0"/>
        <Button Grid.Row="1" Command="{Binding ExitApplicationCommand}">Exit</Button>
    </Grid>
</Window>
